<script>
    function quienSoy() {
        $("#yoSoy").modal("show");
    }

    function registrar() {

        var btn = $("#btnRegistrar");
        var n = $("#name");
        var m = $("#mail");
        var ms = $("#msg");

        var nVal = n.val().trim();
        var mVal = m.val().trim();

        if (!nVal && !mVal) {
            ms.text('Por favor, llene todos los campos.').show();
            $("#name").focus();
            return;
        }
        if (!nVal && mVal) {
            ms.text('Por favor, ingrese su Nombre.').show();
            $("#name").focus();
            return;
        }
        if (nVal && !mVal) {
            ms.text('Por favor, ingrese su E-Mail.').show();
            $("#mail").focus();
            return;
        }
        else {
            btn.prop('disabled', true).text('Procesanding...');
            ms.hide();
        }

        var safeN = $('<div>').text(nVal).html();

        $("#name, #mail, #btnRegistrar").fadeOut(300, function () {
            $("#uName").text(safeN);
            $("#bienvenid").fadeIn(300)
        });

    };
</script>